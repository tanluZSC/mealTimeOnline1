@model IEnumerable<MealTimeOnline.Models.Role>

@{
    ViewBag.Title = "Roles";
    ViewBag.PageTitle = "Roles List";
}

<table class="table table-striped table-hover table-bordered" id="bs-admin-role">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
    @{ int cnt = 0; }
    @foreach (var item in Model)
    {
        <tr>
            <td>@(++cnt)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.RoleId}) |
                @Html.ActionLink("Details", "Details", new {id = item.RoleId}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.RoleId})
            </td>
        </tr>
    }
    </tbody>
</table>

@section Styles {
    @Styles.Render("~/Content/DataTables")
}

@section Scripts {
    @Scripts.Render("~/bundles/DataTables")
    <script>
        $('#bs-admin-role').dataTable();
    </script>
}
