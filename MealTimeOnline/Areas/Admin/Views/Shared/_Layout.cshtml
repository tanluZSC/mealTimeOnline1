<!doctype html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin | @ViewBag.Title</title>

    @Styles.Render("~/Content/style/admin")
    @RenderSection("Styles", false)
</head>

<body class="sticky-header ">
    <section>
        <!-- left side start-->
        <div class="left-side sticky-left-side">

            <!--logo and iconic logo start-->
            <div class="logo">
                <a href="@Url.Action("Index", "Home")"><span class="text-info">MTO</span> <span style="color: #fff">Admin</span></a>
            </div>

            <div class="logo-icon text-center">
                <a href="@Url.Action("Index", "Home")"><img src="@Url.Action("Imgx", "Image", new { setting = "w_50,h_50,o_0", text = "MTO" })" alt=""></a>
            </div>
            <!--logo and iconic logo end-->


            <div class="left-side-inner">

                <!-- visible to small devices only -->
                @Html.Partial("_UserMenu")

                <!--sidebar nav start-->
                @Html.Partial("_Sidebar")
                <!--sidebar nav end-->

            </div>
        </div>
        <!-- left side end-->
        <!-- main content start-->
        <div class="main-content">

            <!-- header section start-->
            <div class="header-section">

                <!--toggle button start-->
                <a class="toggle-btn"><i class="fa fa-bars"></i></a>
                <!--toggle button end-->
                <!--notification menu start -->
                @Html.Partial("_NotificationMenu")
                <!--notification menu end -->

            </div>
            <!-- header section end-->
            <!-- page heading start-->
            <div class="page-heading">
                <h3>@ViewBag.PageTitle</h3>
                <ul class="breadcrumb">
                    <li>
                        <a href="@Url.Action("Index", "Home")">Dashboard</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", ViewContext.RouteData.Values["controller"] as string)">@ViewContext.RouteData.Values["controller"]</a>
                    </li>
                    <li class="active">@ViewContext.RouteData.Values["action"]</li>
                </ul>
            </div>
            <!-- page heading end-->
            <!--body wrapper start-->
            <div class="wrapper">
                @RenderBody()
            </div>
            <!--body wrapper end-->
            <!--footer section start-->
            <footer class="sticky-footer">
                &copy; @DateTime.Now.Year A ZSC Team
            </footer>
            <!--footer section end-->
        </div>
        <!-- main content end-->
    </section>

    <!-- Placed js at the end of the document so the pages load faster -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/nicescroll")
    @Scripts.Render("~/bundles/Admin/Scripts")

    @RenderSection("Scripts", false)
</body>
</html>
